<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
  <!-- Suppress EI_EXPOSE_REP2 for input handlers -->
  <Match>
    <Class name="explodingkittens.controller.ConsoleCatCardRequestInputHandler"/>
    <Bug pattern="EI_EXPOSE_REP2"/>
  </Match>
  <Match>
    <Class name="explodingkittens.controller.ConsoleCatCardStealInputHandler"/>
    <Bug pattern="EI_EXPOSE_REP2"/>
  </Match>
  
  <!-- Suppress test class warnings -->
  <Match>
    <Class name="~.*Test"/>
    <Bug pattern="UrF"/>
  </Match>
  <Match>
    <Class name="~.*Test"/>
    <Bug pattern="EI_EXPOSE_REP2"/>
  </Match>
  <Match>
    <Class name="~.*Test"/>
    <Bug pattern="NP_NULL_ON_SOME_PATH"/>
  </Match>

  <!-- Suppress EI_EXPOSE_REP for Deck and Player -->
  <Match>
    <Class name="explodingkittens.model.Deck"/>
    <Bug pattern="EI_EXPOSE_REP"/>
  </Match>
  <Match>
    <Class name="explodingkittens.model.Player"/>
    <Bug pattern="EI_EXPOSE_REP"/>
  </Match>
</FindBugsFilter> 